html,
body
  color: #333

// 主体内容相关样式
.wrapper
  width 100%
  height 100%
  overflow auto
  &::-webkit-scrollbar
    width 5px
  &::-webkit-scrollbar-thumb
    border-radius: 10px
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2)
    background: rgba(0,0,0,0.2)
  &::-webkit-scrollbar-trac
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2)
    border-radius: 10px
  .content
    box-sizing: border-box
    padding: 10px
.wrapper
  height 100%
  box-sizing border-box
  position relative
  &__menue
    width 200px
    height 100%
    float left
    position relative
    z-index 10
    background-color #fff
    box-shadow 0 1px 2px 0 rgba(0,0,0,0.06)
  &__content
    position absolute
    width 100%
    height 100%
    z-index 9
    box-sizing border-box
    padding 0 0 0 200px
  &__main
    position absolute
    width 100%
    height 100%
    z-index 9
    box-sizing border-box


// 面板相关样式
.panel
  padding: 10px
  box-sizing: border-box
  background-color: #fff
  box-shadow: 0 1px 1px rgba(0,0,0,.05)
  border-radius: 4px
  border: 1px solid transparent
  &__header
    padding: 10px 15px
    border-bottom: 1px solid transparent
    border-top-left-radius: 3px
    border-top-right-radius: 3px
  &__body
    padding: 10px
  &__footer
    padding: 10px 15px
    border-top: 1px solid transparent
    border-bottom-right-radius: 3px
    border-bottom-left-radius: 3px
// 面板默认样式
.panel-default
  border-color: rgba(225,233,220,0.5)
  .panel__header
    border-color: rgb(225,233,220)
  .panel__footer
    border-color: rgb(225,233,220)

.search-input
  width: 180px
.form-input
  width: 300px

for n in 1...100 {
  .ml{n} {
    margin-left: (n)px;
  }
  .mt{n} {
    margin-top: (n)px;
  }
  .mr{n} {
    margin-right: (n)px;
  }
  .mb{n} {
    margin-bottom: (n)px;
  }
}


.fl
  float left

.fr
